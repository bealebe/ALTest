<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.bryanbeale.altest.MainActivity">

        <EditText
            android:id="@+id/editTextInteger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Enter an Integer"
            android:inputType="numberSigned" />

        <Button
            android:id="@+id/buttonExecute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Execute Encode/Decode"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDecoded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Decoded " />

            <TextView
                android:id="@+id/textViewDecodedValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="00HHHHHH HLLLLLLL " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewEncoded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Encoded " />

            <TextView
                android:id="@+id/textViewEncodedValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="0HHHHHHH 0LLLLLLL " />

        </LinearLayout>


    </LinearLayout>
</layout>
