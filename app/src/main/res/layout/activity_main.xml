<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.bryanbeale.altest.MainActivity">

        <EditText
            android:id="@+id/editTextInteger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Enter an Integer to Encode"
            android:inputType="numberSigned" />

        <Button
            android:id="@+id/buttonEncode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Encode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:id="@+id/editTextHex1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingLeft="15dp"
                android:paddingRight="12.5dp"
                android:hint="ex: 0XFF"
                android:digits="0123456789ABCDEFabcdef"
                android:inputType="textNoSuggestions"
                android:maxLength="4" />

            <EditText
                android:id="@+id/editTextHex2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:paddingLeft="12.5dp"
                android:paddingRight="15dp"
                android:hint="ex: 0XFF"
                android:digits="0123456789ABCDEFabcdef"
                android:inputType="textNoSuggestions"
                android:maxLength="4" />

        </LinearLayout>


        <Button
            android:id="@+id/buttonDecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Decode" />

    </LinearLayout>
</layout>
